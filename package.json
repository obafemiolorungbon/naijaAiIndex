{
  "name": "naija-ai-index",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "The open-source directory of Nigerians building in the AI space",
  "scripts": {
    "validate:data": "tsx scripts/src/validate.ts",
    "generate:readme": "tsx scripts/src/generate-readme.ts",
    "generate:data": "tsx scripts/src/generate-data.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm generate:data && tsc --noEmit -p scripts/tsconfig.json && tsc -b apps/web",
    "build": "pnpm generate:data && pnpm --filter @naija-ai-index/web build",
    "test": "pnpm validate:data",
    "dev": "pnpm generate:data && pnpm --filter @naija-ai-index/web dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.17.0",
    "glob": "^11.0.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "yaml": "^2.6.1"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  }
}
